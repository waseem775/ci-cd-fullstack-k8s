# ðŸ“¦ Build stage
FROM node:18 as build

WORKDIR /app

# âœ… Copy only package files first to leverage Docker cache
COPY package*.json ./
RUN npm install

# âœ… Copy the rest of the app
COPY . .

# ðŸ”§ Build production-ready React app
RUN npm run build

# ðŸš€ Production stage
FROM nginx:alpine

# âœ… Copy build output to NGINX's default HTML directory
COPY --from=build /app/build /usr/share/nginx/html

# âœ… Optional: Custom NGINX config for SPA routing
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

# ðŸŒ€ Start NGINX
CMD ["nginx", "-g", "daemon off;"]
